<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_online_blank"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:background="@drawable/back"
        android:layout_margin="16dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Instruction"
        android:textColor="#FFEB3B"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/atp__bg_circle_anim"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="64dp"
        android:text="Nguoi co 15 cau hoi lan luot phai trai qua va ban co 4 su lua chon tro giup la:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/bt50_50"
        android:layout_below="@+id/text"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/percent50"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="May tinh loai bo 2 phuong an sai"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/audient_help"
        android:layout_below="@+id/bt50_50"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/hepl"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="Hoi y kien khan gia"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/call"
        android:layout_below="@+id/audient_help"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/call"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="Goi dien cho nguoi than tro giup"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/change"
        android:layout_below="@+id/call"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/restart"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="Doi mot cau hoi khac"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>