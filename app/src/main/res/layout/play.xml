<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_online_blank"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:text="next"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/help5050"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:src="@drawable/percent50"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/help_call"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:src="@drawable/call"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/help_chart"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:src="@drawable/hepl"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/help_change"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:src="@drawable/restart"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/atp_icon_retry"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/time"
                android:layout_width="64dp"
                android:layout_marginTop="148dp"
                android:background="@drawable/box"
                android:layout_marginLeft="32dp"
                android:text="30"
                android:textSize="24sp"
                android:layout_height="32dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="0"
                android:layout_marginLeft="56dp"
                android:id="@+id/order"
                android:layout_width="64dp"
                android:background="@drawable/box"
                android:text="Cau 2"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_height="32dp" />

            <Button
                android:id="@+id/money"
                android:layout_marginLeft="120dp"
                android:textColor="#ffffff"
                android:layout_width="128dp"
                android:background="@drawable/box"
                android:text="$ 0"
                android:layout_height="32dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/question"
            android:layout_gravity="center"
            android:layout_width="338dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:background="@drawable/box"
            android:layout_height="128dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <Button
                android:textColor="#ffffff"
                android:id="@+id/answer_1"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_nomal"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <Button
                android:textColor="#ffffff"
                android:id="@+id/answer_2"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_nomal"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/answer_3"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/bg_nomal"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/answer_4"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_nomal"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
